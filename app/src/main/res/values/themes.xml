<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- Base application theme. -->
        <style name="Theme.BlackEye" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="android:windowSplashScreenBackground">#004d40</item>
            <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        </style>

    <style name="Theme.BlackEye.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/deep_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.BlackEye</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

    </style>




</resources>
